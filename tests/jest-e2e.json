  "rootDir": "..",
  "moduleNameMapper": {
    "@/(.*)": "<rootDir>/src/$1"
  },
  "testEnvironment": "node",
  "testRegex": "..tests/api/auth/",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFilesAfterEnv": ["./tests/lib/jest.setup.ts"]
}
